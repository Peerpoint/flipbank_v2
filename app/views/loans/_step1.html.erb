		<div class="container">
             <div class="row">
                 <div class="col-md-12 main-title">
                 	<center><h1>Fast 5 Minute Application</h1></center>
                </div>
       		</div>
        </div>

		<section class="container" id="main">

<!-- Start Survey container -->
<div id="survey_container">
	<div id="top-wizard">
		<strong>Progress </strong><br>
		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
		    0%
		  </div>
		</div>
		<div class="shadow"></div>
	</div><!-- end top-wizard -->
	<form name="survey_container">
	<div id="middle-wizard">
					<div class="step">
						<div class="row">
							<h3 class="col-md-10">Loan details</h3>
								<div class="col-md-6">
										  	<div class="form-group">
										  	   <%= f.label :trans_type, 'Loan Type' %>
										       <%= f.input :trans_type, label: false,  collection: [['New Purchase', 1], ['Refinance', 2]], prompt: "Select Your Loan Type...", class:"form-control" %>
										    </div>
										  <div class="data-list">
										  	<div class="form-group">
										         <%= f.label :gross_loan, 'Loan amount requested' %>
										         <%= f.text_field :gross_loan, class: "form-control", placeholder: "$" %>
										    </div>
										  </div>
								</div>
								<div class="col-md-6">
													<div class="form-group">
												  	   <%= f.label :trans_type, 'Loan term' %>
												       <%= f.input :trans_type, label: false,  collection: [['12 months IO (rehab loans)', 1], ['30 years (term loans)', 2]], prompt: "Select Your Loan Type...", class:"form-control" %>
												    </div>
											<div class="data-list">
												<div class="form-group">
											         <%= f.label :hemail, 'Target closing date' %>
											         <%= f.text_field :hemail, class: "form-control", placeholder: "mm/dd/yyyy" %>
											    </div>
											</div>
								</div><!-- end col-md-6 -->
					            		<label class="indent">Will you need rehab funds?</label>            
											<ul class="data-list clearfix">
												<li><input name="rehab" type="radio" class="required" value="rehab_funds"> Yes</li><br>
												<li><input name="rehab" type="radio" class="required" value="no_rehab"> No</li>
											</ul>
											<div id="no_rehab" style=>
											</div>
											<div class="col-md-6" id="rehab_funds">
											<div class="data-list">
												
												<div class="form-group" id="rehab_funds">
											         <%= f.label :gross_loan, 'Initial Amount Requested' %>
											         <%= f.text_field :gross_loan, class: "form-control", placeholder: "$" %>
											    </div>
											   +
											   <div class="form-group">
											         <%= f.label :rehab_funds, 'Rehab Amount Requested' %>
											         <%= f.text_field :rehab_funds, class: "form-control", placeholder: "$" %>
											    </div>
											    =
												<div class="form-group">
											         <%= f.label :hemail, 'Total Amount Requested' %>
											         <%= f.text_field :hemail, class: "form-control", placeholder: "$" %>
											    </div>
												<p>The total dollar amount requested for this property.  This is the dollar amount of the loan you want to apply for (rounded up to the nearest $100).</p>
											</div>
										</div><!-- end col-md-6 -->
									</div><!-- end row -->
					</div><!-- end step info-->
                <div id="bottom-wizard">
                       <div class="form-group">
        				 <%= f.submit :Continue, class:'btn btn-next' %>
       					</div>
                </div><!-- end bottom-wizard -->
                
                
                    </div>
                    </form>
    
</div><!-- end Survey container -->
</section><!-- end section main container -->

<script>
	$('input[type=radio][name=rehab]').change(function () {
  $('#no_rehab').css("display","none");
  $('#rehab_funds').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","block");
});
	
</script>